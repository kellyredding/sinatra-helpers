@import "reset-fonts.less";

@base_font_family: 'Lucida Grande',arial,helvetica,clean,sans-serif;
@base_font_size: 10pt;
@base_font_size_adjust: 1em;

UL.bulleted LI {
  list-style-position: inside !important;
  list-style-type: disc !important;
}

OL LI {
  list-style-type: decimal;
}

HTML {
  font-size: @base_font_size;
}
BODY {
  width: 100%;
	font-family: @base_font_family;
	font-size: @base_font_size_adjust;
	font-size-adjust: none;
	font-variant: normal;
}
A, IMG, FORM, FIELDSET {
  border: 0px none;
  padding: 0;
  margin: 0;
}
INPUT, SELECT, TEXTAREA, BUTTON {
  margin: 0;
  padding: .2em .3em;
	font-family : @base_font_family;
	font-size: @base_font_size_adjust;
	font-size-adjust: none;
	font-variant: normal;
}
INPUT[type="submit"],
INPUT[type="checkbox"], DIV.checkbox LABEL,
INPUT[type="radiobutton"] {
  cursor: pointer;
  vertical-align: middle;
}
INPUT[type="checkbox"] {
  margin-right: .2em;
}
SELECT {
  padding: 0;
}

/* IE fixes */
HTML, BODY {
  height:100%;
}

/* Add the style below to a container element that contains floats - will cause the container 
   to expand to the height of the floats */
.clearfix:after {
    content: "."; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;
}
/* Hides from IE-mac \*/
* html .clearfix {height: 1%;}